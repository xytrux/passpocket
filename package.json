{
  "name": "passpocket",
  "version": "0.2.1-alpha",
  "description": "A simple password manager",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package-win": "electron-packager . --platform-windows --arch=x64",
    "package-linux": "electron-packager . --platform=linux --arch=x64",
    "package-mac": "electron-packager . --platform=darwin --arch=x64",
    "dist": "electron-builder",
    "release": "electron-builder -p always"
  },
  "build": {
    "appId": "com.xytrux.passpocket",
    "productName": "PassPocket",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "publish": ["github"]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ],
      "publish": ["github"]
    },
    "mac": {
      "target": "dmg",
      "publish": ["github"]
    }
  },
  "keywords": [],
  "author": {
    "name": "Xytrux",
    "email": "helloworldpy103@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/get": "^3.0.0",
    "@electron/packager": "^18.3.3",
    "debug": "^4.3.5",
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3",
    "electron-winstaller": "^5.3.1"
  },
  "dependencies": {
    "@otplib/preset-browser": "^12.0.1",
    "body-parser": "^1.20.2",
    "bonjour": "^3.5.0",
    "chance": "^1.1.11",
    "express": "^4.19.2",
    "otplib": "^12.0.1"
  }
}
